{
    "coc.preferences.colorSupport": true,
    "list.normalMappings": {
        "q": "do:exit"
    },
    "python": {
        "analysis": {
            "diagnosticMode": "workspace"
        },
        "linting": {
            "mypyEnabled": true,
            "mypyArgs": [
                "--cache-dir=/dev/null"
            ],
						"flake8Enabled": true
        }
    },
    "explorer": {
      "position": "right",
      "root": {
          "strategies": ["workspace"]
      },
      "icon": {
          "enableNerdfont": true
      },
      "file": {
          "hiddenRules": {
              "filenames": ["__pycache__"]
          }
      }
    }
}
